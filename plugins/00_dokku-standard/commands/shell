#!/usr/bin/env bash
set -eo pipefail; [[ $DOKKU_TRACE ]] && set -x

HISTFILE=~/.dokku_history
history -r || true

trim()
{
  sed -e 's/^[[:space:]]*//g' -e 's/[[:space:]]*$//g'
}

trap 'history -w' EXIT

while true; do
  trap '' SIGINT
  read -ep "dokku> " line || {
    echo; true; break
  }
  trap - SIGINT

  line=$(echo $line | trim)
  CMD=$(echo $line | awk '{ print $1 }')

  [ -z $CMD ] && continue

  [[ "$line" != "$(fc -ln -1 | trim)" ]] && history -s "$line"

  case $CMD in
# shell builtins
    clear)
      clear
      ;;
    exit)
      break
      ;;

# Not a built-in, run as regular dokku command
    *)
      dokku $line || true
  esac

done

